<%= form_for @article do |f| %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.label :'upload your image' %><br>
    <%=f.file_field :avatar %>
    <br>
    <br>
    <br>



    <%= f.submit %>
  </p>
 
<% end %>
